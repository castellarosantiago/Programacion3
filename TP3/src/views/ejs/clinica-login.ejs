<%- include('layout') %>
    <h2>Login Clínica</h2>
    <form method="POST" action="/clinica/login">
        <input name="usuario" placeholder="Usuario" required><br>
        <input name="password" type="password" placeholder="Contraseña" required><br>
        <button type="submit">Entrar</button>
    </form>
    <% if (error) { %>
        <div class="error-msg">
            <%= error %>
        </div>
        <% } %>